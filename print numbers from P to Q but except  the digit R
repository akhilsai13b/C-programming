#include <stdio.h>
int main() 
{
int p, q, r;
printf("\nInput the first integer: "); 
scanf("%d", &p);
printf("\nInput the second integer: ");
scanf("%d", &q);
printf("\nInput the third integer: ");
scanf("%d", &r);
if((q > r) && (r > p) && ((q+r) > (p+q)) && (r > 0) && (r > 0) && (p%2 == 0))
{
printf("\nCorrect values\n");
} 
else {
printf("\nWrong values\n");
}
return 0;
}
